services:
  - type: web
    name: book-inventory-platform
    env: python
    buildCommand: |
      pip install -r requirements.txt
      python create_db.py
    startCommand: gunicorn run:app
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.4
      - key: SECRET_KEY
        generateValue: true
      - key: GOOGLE_BOOKS_API_KEY
        sync: false
      - key: DATABASE_URL
        fromDatabase:
          name: book_inventory_db
          property: connectionString

databases:
  - name: book_inventory_db
    databaseName: book_inventory
    user: book_inventory